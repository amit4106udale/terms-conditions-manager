<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" method="upgrade" type="plugin" group="user">
	<name>Tc-User log</name>
	<author>Techjoomla</author>
	<creationDate>Oct 2016</creationDate>
	<copyright>(c)Techjoomla</copyright>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>http://www.techjoomla.com</authorUrl>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.0</version>
	<description>This is user plug-in will work on after user logged in to keep the user accepted T and C.</description>
	<files>
		<filename plugin="plug_user_tc">plug_user_tc.php</filename>
	</files>
	<languages folder="language">
			<language tag="en-GB">en-GB/en-GB.plug_user_tc.ini</language>
  	</languages>
  	<config name="params">
		<fields name="params">
			<fieldset name="basic">
				
				<field
					name="version_number"
					type="text"
					label="PLG_USER_TC_LBL_VERSION_NUMBER"
					description="PLG_USER_TC_DESC_VERSION_NUMBER"
					size="40"
				/>
				<field
					name="link_of_tc"
					type="text"
					label="PLG_USER_TC_LBL_LINK_OF_TC"
					description="PLG_USER_TC_DESC_LINK_OF_TC"
					size="40"
				/>
				
				 <field name="date_of_commencement" 
				 default="0000-00-00 00:00:00" 
				 type="calendar" 
				 class="inputbox" 
				 filter="safehtml" 
				 format="%Y-%m-%d %H:%M:%S" 
				 required="true" 
				 label="PLG_USER_TC_LBL_DATE_OF_COMMENCEMENT" 
				 description="PLG_USER_TC_DESC_DATE_OF_COMMENCEMENT" 
				 hint="PLG_USER_TC_LBL_DATE_OF_COMMENCEMENT"/>

			</fieldset>
		</fields>
	</config>
</extension>

